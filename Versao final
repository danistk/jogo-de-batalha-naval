#include <stdio.h>

int main()
{

    int tamanhoNavio = 3;

    char linha[10] = {'A', 'B', 'C', 'D', 'E', 'F', 'G', 'H', 'I', 'J'};
    // INICIANDO O TABULEIRO COM 0
    int tabuleiro[10][10] = {0};

    //  CRIACAO DA IMAGEM DA CRUZ
    for (int j = 0; j < 5; j++)
    {

        tabuleiro[0 + j][1] = 3;
    }
    for (int j = 0; j < 1; j++)
    {

        tabuleiro[2 + j][0] = 3;
    }

    for (int j = 0; j < 1; j++)
    {

        tabuleiro[2 + j][2] = 3;
    }

    // CRIACAO DA IMAGEM DO CONE
    for (int j = 0; j < 1; j++)
    {

        tabuleiro[5][2 + j] = 3;
    }
    for (int j = 0; j < 3; j++)
    {

        tabuleiro[4 + j][3] = 3;
    }

    for (int j = 0; j < 5; j++)
    {

        tabuleiro[3 + j][4] = 3;
    }

    // CRIACAO DA IMAGEM OCTAEDRO
    for (int j = 0; j < 1; j++)
    {

        tabuleiro[2 + j][6] = 3;
    }
    for (int j = 0; j < 3; j++)
    {

        tabuleiro[1 + j][7] = 3;
    }

    for (int j = 0; j < 1; j++)
    {

        tabuleiro[2 + j][8] = 3;
    }

    printf("   "); // espaÃ§o para alnhar as letras com os numeros
    for (int l = 0; l < 10; l++)
    {

        printf(" %c", linha[l]);
    }
    printf("\n");

    for (int i = 0; i < 10; i++)
    {

        // imprimindo e ajustando o numero 10 que tem dois digitos
        if (i == 9)
            printf(" %d", i + 1);
        else
            printf(" %d", i + 1);
        
            // laco para imprimir os simbolos na matriz
        for (int t = 0; t < 10; t++)
        {
            if (tabuleiro[t][i] == 3)
                printf(" #");
            else
                printf(" ~");
        }

        printf("\n");
    }

    return 0;
}
