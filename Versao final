#include <stdio.h>

int main()
{

    int tamanhoNavio = 3;
    printf("\n");
    printf("#### IMPRIMINDO FIGURAS NA MATRIZ #### \n");
    printf("\n");
    char linha[10] = {'A', 'B', 'C', 'D', 'E', 'F', 'G', 'H', 'I', 'J'};
    // INICIANDO O TABULEIRO COM 0
    int tabuleiro[10][10] = {0};

    // IMAGEM DA CRUZ
    for (int i = 0; i < 10; i++)
    {

        for (int j = 0; j < 10; j++)
        {
            if (i == 3 && j == 2)
            {

                tabuleiro[i][j] = 3;
            }
            else if (i == 4 && (j >= 0 && j <= 4))
            {

                tabuleiro[i][j] = 3;
            }
            else if (i == 5 && j == 2)
            {

                tabuleiro[i][j] = 3;
            }
        }
    }

    // IMAGEM DO CONE

    for (int i = 0; i < 10; i++)
    { // linha da matriz

        for (int j = 0; j < 10; j++)
        { // colunas da matriz

            if (i == 0 && j == 6)
            { // imprimndo 1 # na linha 0

                tabuleiro[i][j] = 3;
            }
            // imprimindo 3 # na linha 1
            else if (i == 1 && (j >= 5 && j <= 7))
            {
                tabuleiro[i][j] = 3;
            } // imprimindo 4 # na linha 2
            else if (i == 2 && (j >= 4 && j <= 8))
            {

                tabuleiro[i][j] = 3;
            }
        }
    }
    // IMAGEM DO OCTAEDRO
    for (int i = 0; i < 10; i++)
    {
        for (int j = 0; j < 10; j++)
        {

            if (i == 5 && j == 5)
            {

                tabuleiro[i][j] = 3;
            }
            else if (i == 6 && (j >= 4 && j <= 6))
            {

                tabuleiro[i][j] = 3;
            }
        }
    }
    for (int i = 0; i < 10; i++)
    {
        for (int j = 0; j < 10; j++)
        {

            if (i == 7 && j == 5)
            {

                tabuleiro[i][j] = 3;
            }
        }
    }

    printf("  "); // espaÃ§o para alnhar as letras com os numeros
    for (int l = 0; l < 10; l++)
    {

        printf(" %c", linha[l]);
    }
    printf("\n");

    for (int i = 0; i < 10; i++)
    {

        // imprimindo e ajustando o numero 10 que tem dois digitos
        if (i == 9)
            printf(" %d", i + 1);
        else
            printf(" %d", i + 1);

        // laco para imprimir os simbolos na matriz
        for (int j = 0; j < 10; j++)
        {
            if (tabuleiro[i][j] == 3)
                printf(" #");
            else
                printf(" ~");
        }

        printf("\n");
    }

    return 0;
}
